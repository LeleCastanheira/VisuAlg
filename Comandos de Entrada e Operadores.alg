algoritmo "Comandos de Entrada e Operadores"
var
     numero1, numero2:Inteiro
     media: Real
inicio
      Escreval("Digite um número: ")
      Leia(numero1)
      Escreval("Digite outro número: ")
      Leia (numero2)
      Escreval("A soma de",numero1, " e", numero2, " é:", numero1 + numero2)
      media <- (numero1 + numero2)/2
      Escreval("E a média é:", media)
fimalgoritmo
